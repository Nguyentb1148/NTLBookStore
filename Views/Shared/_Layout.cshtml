                            </li>
                        </form>
                        
                    }
                     @if (User.Identity?.IsAuthenticated is false or null || User.IsInRole(Roles.User))
                     {
                         <div class="nav-item">
                             <a class="nav-item" asp-area="" asp-controller="Cart" asp-action="Index">Cart</a>
                         </div>
                     }
                     <partial name="_LoginPartial"/>
